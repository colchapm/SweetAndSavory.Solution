@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model List<SweetAndSavory.Models.Treat>;

<h1>treats menu</h1>

<hr />

@if (@Model.Count == 0)
{
  <h3>no treats have been created yet</h3>
}

<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new {id = treat.TreatId })</li>
  }
</ul>

<ul class="menu-links">
  <li>@Html.ActionLink("add a new treat", "Create")</li>
  <li>@Html.ActionLink("back to home", "Index", "Home")</li>
</ul>
