@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model List<SweetAndSavory.Models.Flavor>;

<h1>flavors menu</h1>

<hr />

@if (@Model.Count == 0)
{
  <h3>no flavors have been created yet</h3>
}

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new {id = flavor.FlavorId })</li>
  }
</ul>

<ul class="menu-links">
  <li>@Html.ActionLink("add a new flavor", "Create")</li>
  <li>@Html.ActionLink("back to home", "Index", "Home")</li>
</ul>
